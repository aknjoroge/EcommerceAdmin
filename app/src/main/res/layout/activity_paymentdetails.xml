<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".paymentdetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/view234"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"


                android:elevation="15dp"
                android:shape="ring"
                app:cardCornerRadius="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_margin="4dp"

                        android:id="@+id/payordertimetxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="time of order" />

                    <TextView

                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_margin="4dp"
                        android:id="@+id/payordertnametxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="user name" />

                    <TextView

                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_margin="4dp"
                        android:id="@+id/payordermailtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="user mail" />

                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_margin="4dp"
                        android:id="@+id/payorderphonetxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="user phone" />

                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_margin="4dp"
                        android:id="@+id/payorderloctxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="user location" />

                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_margin="4dp"
                        android:id="@+id/payorderorderstxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="list of orders" />

                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_margin="4dp"
                        android:id="@+id/payorderpricetxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total price" />

                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_margin="4dp"
                        android:id="@+id/payordermesotxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="mpesa message" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="150dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/green"
                android:background="#ffffff"
                android:shape="ring"
                app:cardCornerRadius="5dp">

                <Button
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:id="@+id/detailpaybtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Done" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>